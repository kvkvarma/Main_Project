<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View</title>
    <link rel="stylesheet" href="./view.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
   <button class="back-home" id="back">&#8592;</button>
  <div class="container">
  <form  action="viewClicked">
    <h3 style="color: rgb(16, 18, 161);margin-top:10px;font: size 10px;">SELECT BRANCH &#38; YEAR</h3>
    <div><b>Select Year:</b> </div>
    <select class="select" name="year">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
    </select>
    <div><b>Select Branch:</b> </div>
    <select class="select" name="branch">
      <option value="CSE">CSE</option>
      <option value="ECE">ECE</option>
      <option value="MECH">MECh</option>
      <option value="EEE">EEE</option>
    </select>
    <button class="subBtn" type="submit">Submit</button>
  </form> 
</div>

{{#if msg}}
<div class="view-table">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">RollNo</th>
      <th scope="col">Year</th>
      <th scope="col">Branch</th>
    </tr>
  </thead>
  <tbody>
    {{#data}}
    <tr>
      <td>{{Name}}</td>
      <td>{{RollNumber}}</td>
      <td>{{Year}}</td>
      <td>{{Branch}}</td>
    </tr>
    {{/data}}
  </tbody>
</table>
</div>
{{else}}
<h4>No Data Found</h4>
{{/if}}

  <script>
    const back = document.getElementById('back');
    back.addEventListener("click",function(){
        window.location.href="/TeacherPage"
    })
</script>
</body>
</html>