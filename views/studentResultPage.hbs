<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" >
    <link rel="stylesheet" href="./studentResultPage.css">
</head>
<body>
 <h2>Student Bio</h2>
 <button id="back">&#8592;</button>
 <script>
    const back = document.getElementById('back');
    back.addEventListener("click",function(){
        window.location.href="/"
    })
</script>
 {{#data}}
 <div class="container">
<div class="bio-table">
<table class="table table-bordered">
  <tbody>
    <tr>
      <th scope="row">Name</th>
      <td>{{Name}}</td>

    </tr>
    <tr>
      <th scope="row">Branch</th>
      <td>{{Branch}}</td>

    </tr>
    <tr>
       <th scope="row">Year</th>
      <td>{{Year}}</td>
    </tr>

    <tr>
       <th class="CGPA-row" scope="row">CGPA</th>
      <td><b>{{CGPA}}</b></td>
    </tr>
  </tbody>
</table>
</div>
</div>

<form id="formmm" action="clickedDone">
    <label for="number">RollNumber: <input class="number-field" type="text" name="number" value="{{RollNumber}}" id="number"></label>
    <p>Select Semester: </p>
    <select class="select" name="sem">
      <option value="semester">Semester 1</option>
      <option value="semester2">Semester 2</option>
      <option value="semester3">Semester 3</option>
      <option value="semester4">Semester 4</option>
      <option value="semester5">Semester 5</option>
      <option value="semester6">Semester 6</option>
      <option value="semester7">Semester 7</option>
      <option value="semester8">Semester 8</option>
    </select>
    <button class="subBtn" type="submit">Submit</button>
  </form> 
{{/data}}

{{#if msg}}
{{#marksData}}
<h2>Previous Semister Marks</h2>
<div class="marks-table">
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">S.no</th>
      <th scope="col">Subject</th>
      <th scope="col">Marks</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Maths</td>
      <td>{{Maths}}</td>

    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Physics</td>
      <td>{{Physics}}</td>

    </tr>
    <tr>
       <th scope="row">3</th>
      <td>Chemistry</td>
      <td>{{Chemistry}}</td>
    </tr>
  </tbody>
</table>
</div>
{{/marksData}}
{{/if}}

{{#marksData}}

<div id="query-div">
      <button id="query-btn">I want to report an Issue</button>
</div>
<script>
  let queryCicked= document.getElementById('query-btn');
  let queryDivClicked = document.getElementById('query-div');
  queryCicked.addEventListener('click',()=>{
    queryDivClicked.innerHTML = `<form  id="sub" action="Qsubmit">
                <label class="labelName">Roll No:<input class="text_field" type="text" id="username" name="username" value="{{RollNumber}}" readonly> </label>
                 
              <textarea placeholder=" Enter your Query here" name="desc" id="desc" cols="40" rows="3"></textarea>  
              <button type="submit" class="buttonSubmit" >Post Query</button>
</form>`
  })
</script>

{{/marksData}}

{{#if msggg}}
    <div id="tempMsg">
      <h6>Sorry! Your doubts will be verified... </h6>
      </div>
    <script>
        var tempMsg = document.getElementById('tempMsg');
        setTimeout(function () {
            tempMsg.style.display = 'none';
        }, 1000);
    </script>
{{/if}}


</body>
</html>